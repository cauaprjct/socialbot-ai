# =============================================================================
# SOCIALBOT AI - CONFIGURAÇÃO DE AMBIENTE
# =============================================================================
# Copie este arquivo para .env e configure suas credenciais

# =============================================================================
# TWITTER/X API v2
# =============================================================================
# Obtenha em: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# =============================================================================
# INSTAGRAM GRAPH API
# =============================================================================
# Obtenha em: https://developers.facebook.com/apps/
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id_here
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# =============================================================================
# LINKEDIN API
# =============================================================================
# Obtenha em: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here

# =============================================================================
# GOOGLE APIS
# =============================================================================
# Google Calendar API
GOOGLE_CALENDAR_CREDENTIALS_PATH=credentials/google_calendar_credentials.json
GOOGLE_CALENDAR_ID=your_google_calendar_id_here

# Google Sheets API (para relatórios)
GOOGLE_SHEETS_CREDENTIALS_PATH=credentials/google_sheets_credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_google_sheets_spreadsheet_id_here

# =============================================================================
# INTELIGÊNCIA ARTIFICIAL
# =============================================================================
# Hugging Face (gratuito)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# OpenAI (opcional, para GPT)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# BANCO DE DADOS
# =============================================================================
# Desenvolvimento (SQLite)
DATABASE_URL=sqlite:///socialbot.db

# Produção (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/socialbot

# Redis (para cache e filas)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CONFIGURAÇÕES DO BOT
# =============================================================================
# Configurações gerais
BOT_NAME=SocialBot AI
BOT_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Timezone
TIMEZONE=America/Sao_Paulo

# Limites de rate limiting
TWITTER_RATE_LIMIT_POSTS_PER_HOUR=50
INSTAGRAM_RATE_LIMIT_POSTS_PER_HOUR=25
LINKEDIN_RATE_LIMIT_POSTS_PER_HOUR=20

# =============================================================================
# DASHBOARD WEB
# =============================================================================
# Streamlit
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0

# FastAPI
FASTAPI_PORT=8000
FASTAPI_HOST=0.0.0.0

# Autenticação (opcional)
SECRET_KEY=your_secret_key_here_change_this_in_production
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# =============================================================================
# INTEGRAÇÕES EXTERNAS
# =============================================================================
# Webhook URLs (opcional)
WEBHOOK_URL=https://your-webhook-url.com/socialbot
WEBHOOK_SECRET=your_webhook_secret_here

# Notion (opcional)
NOTION_TOKEN=your_notion_token_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Trello (opcional)
TRELLO_API_KEY=your_trello_api_key_here
TRELLO_TOKEN=your_trello_token_here
TRELLO_BOARD_ID=your_trello_board_id_here

# =============================================================================
# MONITORAMENTO E LOGS
# =============================================================================
# Sentry (opcional, para monitoramento de erros)
SENTRY_DSN=your_sentry_dsn_here

# Prometheus (opcional, para métricas)
PROMETHEUS_PORT=9090

# =============================================================================
# CONFIGURAÇÕES DE CONTEÚDO
# =============================================================================
# IA - Configurações de geração de conteúdo
AI_MODEL_NAME=microsoft/DialoGPT-medium
AI_MAX_LENGTH=280
AI_TEMPERATURE=0.7
AI_TOP_P=0.9

# Hashtags padrão
DEFAULT_HASHTAGS=#AI #automation #socialmedia #bot #tech

# Horários preferenciais para posts (formato: HH:MM)
PREFERRED_POST_TIMES=09:00,12:00,15:00,18:00,21:00

# =============================================================================
# DOCKER E DEPLOY
# =============================================================================
# Configurações para Docker
DOCKER_ENV=development
COMPOSE_PROJECT_NAME=socialbot-ai

# Health check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10